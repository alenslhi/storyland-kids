<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna latar belakang abu muda -->
    <solid android:color="#F2F3F5" />

    <!-- Sudut membulat -->
    <corners android:radius="20dp" />

    <!-- Padding dalam (opsional) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

    <!-- Stroke tipis (opsional, bisa dibuang) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />
</shape>
